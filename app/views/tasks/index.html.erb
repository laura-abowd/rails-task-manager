<div class="container">
  <h1>My tasks!</h1>

<p id="create-item-link">
  <i class="fa fa-plus" aria-hidden="true"></i>
  <%= link_to 'Create a new item', new_task_path, class: "home-link" %></p>

<ul>
<% @tasks.each do |task| %>
  <li><i class="fa fa-check-square" aria-hidden="true"></i>
    <%= link_to task.title, task_path(task), class: "task-list"%></li>
  <br>
<% end %>
</ul>
</div>
