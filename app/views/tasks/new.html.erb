<h1>Create a new task here</h1>

<div class="container">
<%= form_for@task do |f| %>
<div class="form-group">
  <%= f.label :Task %>
  <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-warning" %>
<% end %>
</div>


<p><%= link_to 'Back to list', tasks_path %></p>
